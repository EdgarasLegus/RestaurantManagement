@model RestaurantManagement.Contracts.Entities.Staff
@{ ViewData["Title"] = "Add Staff member"; }
@{ 

    var context = new RestaurantManagement.Data.RestaurantManagementCodeFirstContext();
    var personRoleRepo = new RestaurantManagement.Data.Repository.PersonRoleRepository(context);
    var roleList = personRoleRepo.GetRoles().AsEnumerable();
}
<h2>Fill form to add new member to staff</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="StaffAddition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label">User name*</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserPassword" class="control-label">User password*</label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PersonRoleId" class="control-label">Person role*</label>
                @Html.DropDownListFor(x => x.PersonRoleId, new SelectList(roleList, "Id", "RoleName"), "--Select Role--", new {@class="form-control"})
                @Html.ValidationMessageFor(x => x.PersonRoleId, "",  new { @class = "text-danger" })
                @*<span asp-validation-for="PersonRoleId" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label asp-for="StartDayOfEmployment" class="control-label">Start date*</label>
                @*<div class="hide">Date format: <br />YYYY-MM-DD</div>*@
                <input asp-for="StartDayOfEmployment" class="form-control" />
                <span asp-validation-for="StartDayOfEmployment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDayOfEmployment" class="control-label">Contract until*</label>
                @*<div class="hide">Date format: <br />YYYY-MM-DD</div>*@
                <input asp-for="EndDayOfEmployment" class="form-control" />
                <span asp-validation-for="EndDayOfEmployment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="button" id="button-3">Add</button>
            </div>

            <div class="form-group">
                <p>* - required</p>
            </div>

            <p style="color:red">@ViewBag.Message</p>
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-default active">&#8629 Go back</a>

<style>
    .btn-default {
        border-color: cornflowerblue
    }

    .button {
        display: inline-flex;
        height: 40px;
        width: 150px;
        border: 2px solid #DF9924;
        margin: 20px 20px 20px 0px;
        color: #DF9924;
        text-transform: uppercase;
        text-decoration: none;
        font-size: .8em;
        letter-spacing: 1.5px;
        align-items: center;
        justify-content: center;
    }

    value {
        color: #DF9924;
        text-decoration: none;
        letter-spacing: 1px;
    }

    #button-3 {
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

        #button-3:hover {
            color: #2D3142;
            background: #DF9924;
        }

    .hide {
        display: none;
    }

    .control-label:hover + .hide {
        display: block;
        font-style: italic;
        color: darkgreen;
    }
</style>
