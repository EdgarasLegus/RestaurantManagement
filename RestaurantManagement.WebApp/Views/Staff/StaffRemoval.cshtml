@model IEnumerable<string>
@{ ViewData["Title"] = "Remove member from staff"; }
<h2>Fill form to remove member from staff</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="StaffRemoval">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">User name*</label>
                <input name="staffMemberName" class="form-control" />
            </div>

            <div class="form-group">
                <button type="submit" class="button" id="button-3">Remove</button>
            </div>

            <div class="form-group">
                <p>* - required</p>
            </div>

            <p style="color:red">@ViewBag.Message</p>
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-default active">&#8629 Go back</a>

<style>
    .btn-default {
        border-color: cornflowerblue
    }

    .button {
        display: inline-flex;
        height: 40px;
        width: 150px;
        border: 2px solid #DF9924;
        margin: 20px 20px 20px 0px;
        color: #DF9924;
        text-transform: uppercase;
        text-decoration: none;
        font-size: .8em;
        letter-spacing: 1.5px;
        align-items: center;
        justify-content: center;
    }

    value {
        color: #DF9924;
        text-decoration: none;
        letter-spacing: 1px;
    }

    #button-3 {
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

        #button-3:hover {
            color: #2D3142;
            background: #DF9924;
        }

    .hide {
        display: none;
    }

    .control-label:hover + .hide {
        display: block;
        font-style: italic;
        color: darkgreen;
    }
</style>

